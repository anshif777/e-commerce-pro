@{
    Layout = "~/Views/Shared/_LayoutDsh.cshtml";
}
@model List<UserSingup>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">UserList</h2>
        </div>
        <div>
            <a href="#" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Create New</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-bordered">
            <table class="table table-bordered align-middle table-nowrap mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="align-middle" scope="col">Name</th>
                        <th class="align-middle" scope="col">Email</th>
                        <th class="align-middle" scope="col">Phone</th>
                        <th class="align-middle" scope="col">Password</th>
                        <th class="align-middle" scope="col">Actions</th> <!-- Add this column for buttons -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Password</td>
                            <td>
                                @if (user.IsBlock)
                                {
                                    <form asp-controller="USingup" asp-action="UnblockUser" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-warning" style="width: 65px; height: 20px; font-size: 12px;">Unblock</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="USingup" asp-action="BlockUser" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-danger" style="width:55px; height: 20px; font-size: 12px;">Block</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>



