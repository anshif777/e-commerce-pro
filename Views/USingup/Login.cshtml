@model Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Sign In Page</title>
    <style>
        body {
            background-image: url('/assets/images/Simg/sigup.jpg');
            background-size: cover;
        }

        .signin-form {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
            margin-top: 75px;
        }

        .signin-heading {
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }
        .signin-button {
            border-radius: 15px;
        }

        .forgot-password-link,
        .signup-link {
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>
<body>

    <div class="container text-center mt-4">
        <!-- Logo Space -->
        
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form class="signin-form" action="/signIn" method="post">
                    <h2 class="signin-heading">Sign In</h2>

                    @if (ViewData["BlockedMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["BlockedMessage"]
                        </div>
                    }
                    <!-- Email Input -->
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" required>
                    </div>

                    <!-- Password Input -->
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" required>
                    </div>

                    <!-- Sign In Button -->
                    <button type="submit" class="btn btn-warning btn-block signin-button">Sign In</button>

                    <!-- Forgot Password Link -->
                    <p class="forgot-password-link"><a href="/forgetPass">Forgot Password?</a></p>

                    <!-- Sign Up Link -->
                    <p class="signup-link text-dark">Don’t have an account? <a href="/Singup">Sign Up</a></p>
                    <a href="/home">Back</a>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
