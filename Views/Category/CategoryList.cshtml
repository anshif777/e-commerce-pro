@{
    Layout = "~/Views/Shared/_LayoutDsh.cshtml";
}
@model List<CategorieS>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Create New</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Category" asp-action="AddCatogary" method="post" id="categoryForm">
                <div class="modal-body">
                    <div class="row gy-3 overflow-hidden">
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="text" name="name" class="form-control" placeholder="Name" required>
                                <label for="name" class="form-label">Name</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea name="Description" class="form-control" placeholder="Description" rows="6" required></textarea>
                                <label for="Description" class="form-label">Description</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>

        </div>
    </div>
</div>

<div class="modal fade" id="exampleModals" tabindex="-1" aria-labelledby="exampleModalsLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalsLabel">Create New</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Category" asp-action="Edit" method="post" id="categoryForm">
                <div class="modal-body">
                    <div class="row gy-3 overflow-hidden">
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input type="text" name="name" class="form-control" placeholder="Name" required>
                                <label for="name" class="form-label">Name</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <textarea name="Description" class="form-control" placeholder="Description" rows="6" required></textarea>
                                <label for="Description" class="form-label">Description</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>

        </div>
    </div>
</div>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Categories List</h2>
        </div>
        <div>
            <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="text-muted material-icons md-post_add"></i>Add Catogorie</a>

        </div>
    </div>
    <div class="card-body">
        <div class="table-bordered">
            <table class="table table-hover align-middle table-sm table-nowrap mb-0">
                <thead class="thead-light table-header">
                    <tr>
                        <th class="align-middle" scope="col">Name</th>
                        <th class="align-middle" scope="col">Description</th>
                        <th class="align-middle" scope="col">Action</th>
                        <th class="align-middle" scope="col">Status</th>
                    </tr>
                </thead>

                <tbody class="table-striped">
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.name</td>
                            <td>@category.Description</td>
                            <td>
                                <form asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" method="get">
                                    <button type="submit" class="btn btn-info" style="width: 50px; height: 20px; font-size: 12px;">
                                        Edit
                                    </button>
                                </form>
                            </td>
                            <td>
                                @if (category.IsList)
                                {
                                    <form asp-controller="Category" asp-action="Unlisted" asp-route-id="@category.Id" method="post">
                                        <button type="submit" class="btn btn-warning" style="width: 65px; height: 20px; font-size: 12px;">
                                            Unlisted
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Category" asp-action="Listed" asp-route-id="@category.Id" method="post">
                                        <button type="submit" class="btn btn-danger" style="width:55px; height: 20px; font-size: 12px;">
                                            Listed
                                        </button>
                                    </form>
                                }
                            </td>
                            <td>  </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


<style>

.thead-light {
  background-color: #f8f9fa;  /* Light background color */
  color: #333;                /* Darker text color for better contrast */
}
</style>