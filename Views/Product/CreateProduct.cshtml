@{
    Layout = "~/Views/Shared/_LayoutDsh.cshtml";
}
@model e_commerce_pro.Models.Products

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Create Product</h2>
        </div>
    </div>
    <form asp-controller="Product" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Name</label>
                <input asp-for="Name" class="form-control" id="inputEmail4" placeholder="">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description"  class="form-control" placeholder="Description" rows="4" required></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputAddress">Price</label>
                <input asp-for="Price" type="number" class="form-control" id="inputAddress" placeholder="">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">Quantity</label>
                <input asp-for="Stock" type="number" class="form-control" id="inputCity">
            </div>
            <div class="form-group col-md-6">
                <label for="inputState">Category</label>
                <select asp-for="CategaryId" asp-items="@ViewBag.CategoryList" id="inputState" class="form-control">
                    <option selected>Choose...</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="imagUrl">Select Product Images (Max 4):</label><br>
                <input type="file" name="img1" multiple class="form-control-file" id="inputImages" accept="image/*" required>
                <input type="file" name="img2" multiple class="form-control-file" id="inputImages" accept="image/*" required>
                <input type="file" name="img3" multiple class="form-control-file" id="inputImages" accept="image/*" required>
                <input type="file" name="img4" multiple class="form-control-file" id="inputImages" accept="image/*" required>
                <small class="text-muted">Accepted formats: JPG, JPEG, PNG.</small>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Create</button>
    </form>


</section>

 <style>
    form {
        max-width: 800px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 16px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px;
    }

    input,
    textarea,
    select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Add border and underline styles */
    input,
    textarea,
    select {
        border: 1px solid #ddd;
    }

        input:focus,
        textarea:focus,
        select:focus {
            border-color: #4caf50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }

    /* Add some spacing between form rows */
    .form-row {
        margin-bottom: 20px;
    }

    /* Add an underline effect */
    input[type="text"] {
        border-bottom: 2px solid #ddd;
    }

    /* Adjust spacing and underline for the ZIP input */
    .form-group.col-md-2 input[type="text"] {
        border-bottom: 1px solid #ddd;
    }
     
  </style>

