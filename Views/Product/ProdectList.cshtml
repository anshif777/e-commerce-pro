@{
    Layout = "~/Views/Shared/_LayoutDsh.cshtml";
}
@model List<Products>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Product List</h2>
        </div>
        <div>
            <a href="/Product/CreateProduct/" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Create New</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-bordered">
            <table class="table table-hover table-bordered align-middle table-nowrap mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="align-middle" scope="col">Name</th>
                        <th class="align-middle" scope="col">Description</th>
                        <th class="align-middle" scope="col">Category</th>
                        <th class="align-middle" scope="col">Price</th>
                        <th class="align-middle" scope="col">Quantity</th>
                        <th class="align-middle" scope="col">Actions</th>
                        <th class="align-middle" scope="col">Status</th><!-- Add this column for buttons -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Description</td>
                            <td>@user.CategorieS.name</td>
                            <td>@user.Price</td>
                            <td>@user.Stock</td>
                          

                      <td>
                                <form asp-controller="Product" asp-action="EditProdect" asp-route-id="@user.Id" method="get">
                                    <button type="submit" class="btn btn-info" style="width: 50px; height: 20px; font-size: 12px;">
                                        Edit
                                    </button>
                                </form>

                            </td>
                            <td>
                                @if (user.Islisted)
                                {
                                    <form asp-controller="Product" asp-action="Unlisted" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-warning" style="width: 65px; height: 20px; font-size: 12px;">
                                            Unlisted
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-controller="Product" asp-action="Listed" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-danger" style="width:55px; height: 20px; font-size: 12px;">
                                            <i class="bi bi-ban"></i> Listed
                                        </button>
                                    </form>
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


